    <!-- /.sidebar -->
  </aside>



  <!-- Content Wrapper. Contains page content -->
  <div class="content-wrapper">
    <!-- =============================================== -->
    <div class="container mt-5">
      <h1 class="text-center">Quản Lý Người Dùng</h1>
      <table class="table table-striped">
          <thead class="thead-dark">
              <tr>
                  <th>ID</th>
                  <th>Tên</th>
                  <th>Email</th>
                  <th>Số Đơn Hàng</th>
                  <th>Số Liên Hệ Đã Gửi</th> <!-- Cột mới cho số liên hệ -->
                  <th>Thao Tác</th>
                  <th>Chi Tiết</th> <!-- Cột mới cho chi tiết -->
              </tr>
          </thead>
          <tbody>
              <% users.forEach(user => { %>
                  <tr>
                      <td><%= user.user_id %></td>
                      <td><%= user.name %></td>
                      <td><%= user.email %></td>
                      <td><%= user.order_count %></td>
                      <td><%= user.contact_count %></td> <!-- Hiển thị số liên hệ đã gửi -->
                      <td>
                          <a href="/admin/users/edit/<%= user.user_id %>" class="btn btn-warning btn-sm">Sửa</a>
                          <form action="/admin/users/delete/<%= user.user_id %>" method="POST" style="display:inline;">
                              <button type="submit" class="btn btn-danger btn-sm">Xóa</button>
                          </form>
                      </td>
                      <td>
                          <a href="/users/details/<%= user.user_id %>" class="btn btn-info btn-sm">Xem Chi Tiết</a>
                      </td>
                  </tr>
              <% }); %>
          </tbody>
      </table>
      <div class="text-center">
          <a href="/admin/users/add" class="btn btn-primary">Thêm Người Dùng</a>
      </div>
  </div>
